{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "types": [
      "reflect-metadata",
      "jest",
      "node",
      "cypress",
      "cypress-axe",
      "@types/testing-library__jest-dom"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "next-env.d.ts",
    "cypress/support/e2e.ts"
, "cypress/support/component.tsx", "cypress/support/component.tmp1", "cypress/support/component.tmp2"  ],
  "exclude": [
    "node_modules",
    "jest.config.ts",
    "**/*.stories.ts",
    "**/*.stories.js",
    "**/*.stories.jsx",
    "**/*.stories.tsx"
  ],
  "references": [
    {
      "path": "./.storybook/tsconfig.json"
    },
    {
      "path": "./cypress/tsconfig.cy.json"
    }
  ]
}
